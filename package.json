{
  "name": "carousel-starter-kit",
  "version": "0.4.2",
  "description": "starter kit for the carousel lesson",
  "browser": "src/index.js",
  "scripts": {
    "build-main": "browserify src/index.js | uglifyjs > public/main.bundle.js",
    "watch-main": "watchify src/index.js -o public/main.bundle.js -d -v",
    "start": "npm run build && serve --compress public/ -p 1337",
    "start-dev": "npm run watch & serve public/ -p 1337",
    "test": "npm run lint -s && npm run build",
    "build": "npm run build-main",
    "watch": "npm run watch-main",
    "lint-eslint": "eslint src/",
    "lint-jscs": "jscs src/",
    "lint": "npm run lint-eslint && npm run lint-jscs"
  },
  "browserify": {
    "transform": [
      "cssify",
      "babelify"
    ]
  },
  "devDependencies": {
    "browser-sync": "^2.0.0-rc10",
    "eslint": "^0.18.0",
    "jscs": "^1.7.3",
    "serve": "^1.4.0",
    "uglify-js": "^2.4.15",
    "watchify": "^3.1.0"
  },
  "author": "Famous",
  "license": "All rights reserved",
  "dependencies": {
    "babelify": "^6.0.1",
    "brfs": "^1.1.1",
    "browserify": "^9.0.7",
    "cssify": "^0.7.0",
    "famous": "git+ssh://git@github.com/Famous/engine#master"
  }
}
